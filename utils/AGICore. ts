/**
 * BÃ«rthama Qendrore e AGI (Artificial General Intelligence)
 * Version Kristal - E pastÃ«r, e modulare dhe e tipizuar mirÃ«
 */

import { initializeMind } from "./mind";
import { processInput } from "./sense";
import { generateResponse } from "./response";
import { planNextSteps } from "./planner";
import { monitor } from "./monitor";
import { Low, JSONFile } from "lowdb";
import { MindState, AGIConfig, ProcessedInput, ExecutionPlan } from "../types/agi.types";

// Konfigurimi i tipizuar pÃ«r bazÃ«n e tÃ« dhÃ«nave
interface AGIMemory {
  state: MindState;
  context: Record<string, any>;
  lastUpdated: Date;
}

// Klasa kryesore e AGI-sÃ« me tipizim rigoroz
export class AGICore {
  private db: Low<AGIMemory>;
  private config: AGIConfig;

  constructor(config?: Partial<AGIConfig>) {
    this.config = {
      memoryPath: "memory.json",
      logLevel: "info",
      ...config
    };

    const adapter = new JSONFile<AGIMemory>(this.config.memoryPath);
    this.db = new Low(adapter);
  }

  /**
   * Metoda kryesore e ekzekutimit tÃ« AGI-sÃ«
   * @param input - Hyrja e pÃ«rdoruesit
   * @returns Promise<string> - PÃ«rgjigja e gjeneruar
   */
  async run(input: string): Promise<string> {
    try {
      monitor.log("ğŸ” AGI fillon pÃ«rpunimin...", "info", { input });

      // Faza 1: Inicializimi dhe leximi i tÃ« dhÃ«nave
      await this.initializeDatabase();

      // Faza 2: PÃ«rpunimi i inputit
      const sensed = await this.processInput(input);

      // Faza 3: Inicializimi i mendjes
      const state = await this.initializeMindState(sensed);

      // Faza 4: Planifikimi
      const plan = await this.createExecutionPlan(state);

      // Faza 5: Gjenerimi i pÃ«rgjigjes
      const output = await this.generateFinalResponse(state, plan);

      // Faza 6: Ruajtja e gjendjes
      await this.persistState(state);

      monitor.log("âœ… AGI pÃ«rfundoi pÃ«rpunimin.", "info");
      return output;
    } catch (error) {
      monitor.log(`âŒ Gabim kritik nÃ« AGICore: ${error.message}`, "error", { error });
      throw new AGIExecutionError("PÃ«rpunimi dÃ«shtoi", { cause: error });
    }
  }

  // Metoda ndihmÃ«se pÃ«r inicializimin e bazÃ«s sÃ« tÃ« dhÃ«nave
  private async initializeDatabase(): Promise<void> {
    await monitor.monitorExecution("db.read", async () => {
      await this.db.read();
      if (!this.db.data) {
        this.db.data = {
          state: {} as MindState,
          context: {},
          lastUpdated: new Date()
        };
        await this.db.write();
      }
    });
  }

  // Metoda ndihmÃ«se pÃ«r pÃ«rpunimin e inputit
  private async processInput(input: string): Promise<ProcessedInput> {
    return monitor.monitorExecution("processInput", async () => {
      const processed = await processInput(input);
      monitor.log(`ğŸ“¥ Input i pÃ«rpunuar: ${JSON.stringify(processed)}`, "debug");
      return processed;
    });
  }

  // Metoda ndihmÃ«se pÃ«r inicializimin e gjendjes sÃ« mendjes
  private async initializeMindState(sensed: ProcessedInput): Promise<MindState> {
    return monitor.monitorExecution("initializeMind", async () => {
      const state = await initializeMind(this.db.data!.state, sensed);
      monitor.log(`ğŸ§  Gjendja e mendjes: ${JSON.stringify(state)}`, "debug");
      return state;
    });
  }

  // Metoda ndihmÃ«se pÃ«r krijimin e planit tÃ« ekzekutimit
  private async createExecutionPlan(state: MindState): Promise<ExecutionPlan> {
    return monitor.monitorExecution("planNextSteps", async () => {
      const plan = await planNextSteps(state);
      monitor.log(`ğŸ“‹ Plani i krijuar: ${JSON.stringify(plan)}`, "debug");
      return plan;
    });
  }

  // Metoda ndihmÃ«se pÃ«r gjenerimin e pÃ«rgjigjes finale
  private async generateFinalResponse(state: MindState, plan: ExecutionPlan): Promise<string> {
    return monitor.monitorExecution("generateResponse", async () => {
      const output = await generateResponse(state, plan);
      monitor.log(`ğŸ’¬ PÃ«rgjigja e gjeneruar: ${output}`, "info");
      return output;
    });
  }

  // Metoda ndihmÃ«se pÃ«r ruajtjen e gjendjes
  private async persistState(state: MindState): Promise<void> {
    await monitor.monitorExecution("db.write", async () => {
      this.db.data = {
        ...this.db.data!,
        state,
        lastUpdated: new Date()
      };
      await this.db.write();
    });
  }
}

// KlasÃ« e personalizuar e gabimeve pÃ«r AGI
class AGIExecutionError extends Error {
  constructor(message: string, options?: ErrorOptions) {
    super(message, options);
    this.name = "AGIExecutionError";
  }
}