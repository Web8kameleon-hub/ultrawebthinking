# Web8 Industrial Production Environment Variables
# Secure environment configuration pÃ«r production deployment
# 
# Author: UltraWeb Industrial Team
# Version: 8.0.0-ENV-PRODUCTION

# Application Configuration
NODE_ENV=production
PORT=3000
BASE_URL=https://euroweb-ultra.com
API_VERSION=v1

# Security Secrets (MUST be set in production)
SESSION_SECRET=your-ultra-secure-session-secret-here-change-this
JWT_SECRET=your-ultra-secure-jwt-secret-here-change-this
ENCRYPTION_KEY=your-ultra-secure-encryption-key-here-change-this

# Database Configuration
# PostgreSQL
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_USER=euroweb
POSTGRES_DB=euroweb

# MongoDB
MONGODB_URI=mongodb://mongo:27017/euroweb
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongo-password

# Redis Cache
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-secure-redis-password

# External API Keys
SERP_API_KEY=your-serp-api-key
BING_API_KEY=your-bing-api-key
GOOGLE_API_KEY=your-google-api-key
NEWS_API_KEY=your-news-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id
GRAFANA_PASSWORD=your-grafana-password

# CDN & Assets
CDN_URL=https://cdn.euroweb-ultra.com
STATIC_ASSETS_URL=https://assets.euroweb-ultra.com

# Logging
LOG_LEVEL=info

# Performance
MAX_MEMORY_USAGE=2GB
WEB_CONCURRENCY=4

# Features (enable/disable)
NEURAL_SEARCH_ENABLED=true
AGI_PROCESSING_ENABLED=true
REAL_TIME_SYNC_ENABLED=true
ADVANCED_ANALYTICS_ENABLED=true

# SSL/TLS (for HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/euroweb.crt
SSL_KEY_PATH=/etc/ssl/private/euroweb.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
