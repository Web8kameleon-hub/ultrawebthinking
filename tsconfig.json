{
  "compilerOptions": {
    "target": "es6", // Target ECMAScript 6 for modern JavaScript features
    "lib": ["dom", "dom.iterable", "esnext"], // Include DOM and ESNext libraries
    "allowJs": true, // Allow JavaScript files in the project
    "skipLibCheck": true, // Skip type checking for library files
    "strict": true, // Enable strict type checking
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in imports
    "noEmit": true, // Prevent emitting compiled files
    "esModuleInterop": true, // Enable compatibility with CommonJS modules
    "module": "esnext", // Use ESNext module resolution
    "moduleResolution": "node", // Resolve modules using Node.js conventions
    "resolveJsonModule": true, // Allow importing JSON files
    "isolatedModules": true, // Ensure each file can be transpiled in isolation
    "jsx": "preserve", // Preserve JSX for Next.js to handle
    "baseUrl": ".", // Set the base URL for module resolution
    "paths": {
      "@/*": ["./*"] // Define alias for cleaner imports
    },
    "incremental": true // Enable incremental compilation for faster builds
  },
  "include": [
    "next-env.d.ts", // Include Next.js environment types
    "**/*.ts", // Include TypeScript files
    "**/*.tsx", // Include TypeScript files with JSX
    "**/*.js", // Include JavaScript files
    "**/*.jsx" // Include JavaScript files with JSX
  ],
  "exclude": [
    "node_modules", // Exclude dependencies
    ".next", // Exclude Next.js build directory
    "out", // Exclude Vercel output directory
    "dist" // Exclude distribution directory
  ]
}
