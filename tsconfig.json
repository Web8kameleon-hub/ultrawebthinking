{
  /**
   * üèóÔ∏è EuroWeb Ultra TypeScript Configuration
   * @author Ledjan Ahmati
   * @version 8.1.0-EUROWEB-ULTRA
   */
  "compilerOptions": {
    // ES Module Configuration - FIX p√´r esModuleInterop errors
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    // Next.js Required
    "lib": [
      "dom",
      "dom.iterable",
      "ES6",
      "ES2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    // Path Resolution
    "baseUrl": ".",
    "paths": {
      "@/*": [ "./", "./*" ],
      "@/components/*": [ "./components/*" ],
      "@/lib/*": [ "./lib/*" ],
      "@/app/*": [ "./app/*" ],
      "@/backend/*": [ "./backend/*" ],
      "@/sandbox/*": [ "./sandbox/*" ],
      "@/scripts/*": [ "./scripts/*" ],
      "@/shared/*": [ "./shared/*" ],
      "@/hooks/*": [ "./hooks/*" ],
      "@/types/*": [ "./types/*" ]
    },
    // Next.js Plugins
    "plugins": [
      {
        "name": "next"
      }
    ],
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ]
}
