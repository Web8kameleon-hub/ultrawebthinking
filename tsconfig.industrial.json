{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@agi/*": ["backend/agi/*"],
      "@api/*": ["backend/api/*"],
      "@shared/*": ["shared/*"],
      "@components/*": ["frontend/components/*"],
      "@lib/*": ["shared/lib/*"],
      "@types/*": ["shared/types/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "backend/**/*",
    "frontend/**/*",
    "shared/**/*",
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "**/_archive/**",
    "**/blocked/**"
  ]
}
