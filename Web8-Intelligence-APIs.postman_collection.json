    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Pre-request script for Web8 Intelligence Platform",
                    "console.log('üöÄ Testing Web8 Intelligence Platform API:', pm.info.requestName);",
                    "",
                    "// Set timestamp for tracking",
                    "pm.globals.set('requestTimestamp', new Date().toISOString());"
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Global test script for Web8 Intelligence Platform",
                    "pm.test('Response time is acceptable', function () {",
                    "    pm.expect(pm.response.responseTime).to.be.below(5000);",
                    "});",
                    "",
                    "pm.test('Status code is successful', function () {",
                    "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                    "});",
                    "",
                    "// Log response for debugging",
                    "console.log('üìä Response Status:', pm.response.status);",
                    "console.log('‚è±Ô∏è  Response Time:', pm.response.responseTime + 'ms');",
                    "",
                    "// Additional tests based on content type",
                    "const contentType = pm.response.headers.get('Content-Type');",
                    "if (contentType && contentType.includes('application/json')) {",
                    "    pm.test('Response is valid JSON', function () {",
                    "        pm.response.to.be.json;",
                    "    });",
                    "} else if (contentType && contentType.includes('application/pdf')) {",
                    "    pm.test('Response is PDF', function () {",
                    "        pm.expect(contentType).to.include('application/pdf');",
                    "    });",
                    "}"
                ]
            }
        }
    ]
