{
  /**
   * üèóÔ∏è UltraWeb Base TypeScript Configuration
   * Konfigurimi qendror p√´r monorepo t√´ past√´r pa dist/
   * @author Ledjan Ahmati
   * @version 8.1.0-MONOREPO-CLEAN
   */
  "compilerOptions": {
    // Target dhe libs
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    
    // Module system (optimized p√´r monorepo)
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": false,
    
    // React/JSX
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    
    // Type checking (strict p√´r cil√´si)
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    
    // Emit behavior (PA DISK OUTPUT)
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    
    // Resolution
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    // Incremental builds p√´r performance
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    
    // Path mapping (MONOREPO ALIASES)
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@agi/*": ["backend/src/agi/*"],
      "@api/*": ["backend/src/api/*"],
      "@shared/*": ["shared/src/*"],
      "@lib/*": ["shared/src/lib/*"],
      "@types/*": ["shared/src/types/*"],
      "@components/*": ["frontend/src/components/*", "components/*"],
      "@pages/*": ["frontend/src/pages/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["shared/src/utils/*"],
      "@styles/*": ["frontend/src/styles/*", "styles/*"],
      "@app/*": ["app/*"]
    }
  },
  
  // Global includes (gjith√ßka TypeScript)
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "next-env.d.ts"
  ],
  
  // Global excludes (PA DIST/BUILD)
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "coverage",
    "**/*.js",
    "**/*.jsx", 
    "**/*.cjs",
    "**/*.mjs",
    "**/_archive/**",
    "**/blocked/**",
    "eslint.config.*",
    "**/eslint.config.*",
    "**/.tsbuildinfo"
  ]
}
