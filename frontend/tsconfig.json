  // Zgjeroj nga baza
  "extends": "../tsconfig.base.json",
  
  // Frontend specifics
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "jsx": "preserve", // Next.js handles JSX
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "plugins": [
      { "name": "next" }
    ],
    "declaration": true,
    "declarationMap": true
  },
  
  // Include frontend source + Next.js
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "../.next/types/**/*.ts"
  ],
  
  // Disable references for now to fix build issues
  "tsBuildInfoFile": "./dist/.tsbuildinfo"
}
