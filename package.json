{
  "name": "euroweb-platform",
  "version": "8.0.0",
  "description": "EuroWeb - Pure TypeScript Industrial Web8 Platform",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 3002",
    "dev:backend": "tsx backend/server.ts",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "build": "next build",
    "start": "next start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:system": "tsx test-system-comprehensive.mts",
    "test:all": "npm run test && npm run test:system",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --fix --config eslint.config.ts",
    "lint:check": "eslint . --ext .ts,.tsx --config eslint.config.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:lint": "npm run format && npm run lint",
    "pre-commit": "lint-staged",
    "tech:guard": "tsx scripts/tech-guard.ts",
    "clean": "rimraf dist .next coverage",
    "clean:all": "npm run clean && rimraf node_modules && npm install",
    "sw:build": "tsx scripts/build-sw.ts build",
    "sw:watch": "tsx scripts/build-sw.ts watch",
    "sw:dev": "tsx scripts/build-sw.ts dev"
  },
  "dependencies": {
    "@emotion/css": "^11.13.5",
    "@huggingface/inference": "^4.7.1",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.98.4",
    "@types/pako": "2.0.4",
    "bs58": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "colors": "^1.4.0",
    "compromise": "^14.14.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "eslint": "^9.31.0",
    "eventemitter3": "5.0.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "framer-motion": "^11.5.0",
    "franc-min": "^6.2.0",
    "helmet": "^8.1.0",
    "hot-formula-parser": "^4.0.0",
    "ioredis": "^5.7.0",
    "lucide-react": "^0.525.0",
    "next": "^14.2.0",
    "next-intl": "^4.3.5",
    "node-html-parser": "^6.1.13",
    "pako": "2.1.0",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.4",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "rxjs": "7.8.2",
    "socket.io": "^4.8.1",
    "systeminformation": "^5.23.5",
    "undici": "^6.20.0",
    "uuid": "^10.0.0",
    "winston": "^3.17.0",
    "zod": "4.0.17"
  },
  "devDependencies": {
    "@pandacss/dev": "^0.54.0",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.7.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/cors": "^2.8.19",
    "@types/eventemitter3": "2.0.4",
    "@types/express": "^5.0.3",
    "@types/helmet": "^4.0.0",
    "@types/hot-formula-parser": "^4.0.4",
    "@types/ioredis": "^4.28.10",
    "@types/node": "^22.15.18",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "jsdom": "^26.1.0",
